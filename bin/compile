#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
APP="spider"

(
    cd "${BUILD_DIR}" &&
    ls -l && 
    mv common "${STAGE}/." &&
    mkdir "${STAGE}/apps" &&
    mv "apps/${APP}" "${STAGE}/apps/." &&
    # shopt -s dotglob nullglob &&
    rm -rf ./* &&
    mkdir "apps" &&
    mv -f "${STAGE}/apps/${APP}" "./apps/." &&
    mv -f "${STAGE}/common" . &&
    ln -s "./apps/${APP}/tsconfig.json" "./tsconfig.json" &&
    ln -s "./apps/${APP}/tsconfig.build.json" "./tsconfig.build.json" &&
    ln -s "./apps/${APP}/package.json" "./package.json" &&
    ln -s "./apps/${APP}/src" "./src" &&
    mkdir "./apps/${APP}/node_modules" &&
    ln -s "./apps/${APP}/node_modules" "./node_modules" 
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    echo "Build Dir" | indent
    ls -lR $BUILD_DIR | head -100
    echo "STAGE Dir" | indent
    ls -lR $STAGE | head -100
    exit 1
fi

ls -l ${BUILD_DIR}
ls -l ${BUILD_DIR}/common

echo "Copied ${APP_BASE} to root of app successfully" | indent

