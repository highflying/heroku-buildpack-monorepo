#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

(
    cd "${BUILD_DIR}" &&
    mv "common" "${STAGE}" &&
    mv "${APP_BASE}" "${STAGE}" &&
    # shopt -s dotglob nullglob &&
    rm -rf ./* &&
    mkdir "apps" &&
    mv -f "${STAGE}/${APP_BASE}" "./apps/." &&
    mv -f "${STAGE}"/common . &&
    ln -s "${APP_BASE}/tsconfig.json" "./tsconfig.json" &&
    ln -s "${APP_BASE}/tsconfig.build.json" "./tsconfig.build.json" &&
    ln -s "${APP_BASE}/package.json" "./package.json" &&
    ln -s "${APP_BASE}/src" "./src" &&
    mkdir "${APP_BASE}/node_modules" &&
    ln -s "${APP_BASE}/node_modules" "./node_modules" 
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

ls -l ${BUILD_DIR}
ls -l ${BUILD_DIR}/common

echo "Copied ${APP_BASE} to root of app successfully" | indent

