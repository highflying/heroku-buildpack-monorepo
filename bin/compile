#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

(
    ls -l "${BUILD_DIR}" &&
    mv "${BUILD_DIR}/common" "${STAGE}" &&
    mv "${BUILD_DIR}/${APP_BASE}" "${STAGE}" &&
    # shopt -s dotglob nullglob &&
    rm -rf "${BUILD_DIR}"/* &&
    mkdir "${BUILD_DIR}/apps" &&
    mv -f "${STAGE}/${APP_BASE}" "${BUILD_DIR}/apps/." &&
    mv -f "${STAGE}"/common "${BUILD_DIR}"/. &&
    ln -s "${BUILD_DIR}/${APP_BASE}/tsconfig.json" "${BUILD_DIR}/tsconfig.json" &&
    ln -s "${BUILD_DIR}/${APP_BASE}/tsconfig.build.json" "${BUILD_DIR}/tsconfig.build.json" &&
    ln -s "${BUILD_DIR}/${APP_BASE}/package.json" "${BUILD_DIR}/package.json" &&
    ln -s "${BUILD_DIR}/${APP_BASE}/src" "${BUILD_DIR}/src" &&
    mkdir "${BUILD_DIR}/${APP_BASE}/node_modules" &&
    ln -s "${BUILD_DIR}/${APP_BASE}/node_modules" "${BUILD_DIR}/node_modules" 
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

ls -l ${BUILD_DIR}
ls -l ${BUILD_DIR}/common

echo "Copied ${APP_BASE} to root of app successfully" | indent

